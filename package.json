{
  "name": "wikipefia",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "pnpm build:compiler && pnpm content:pull && pnpm content:compile && next build",
    "build:local": "pnpm build:compiler && pnpm content:compile && next build",
    "build:compiler": "pnpm --filter @wikipefia/mdx-compiler build",
    "content:pull": "node --experimental-strip-types scripts/pull-content.ts",
    "content:compile": "node --experimental-strip-types scripts/build-content.ts",
    "content:validate": "node --experimental-strip-types scripts/validate-routes.ts",
    "start": "next start",
    "lint": "eslint"
  },
  "dependencies": {
    "@mdx-js/mdx": "^3.1.1",
    "@wikipefia/mdx-compiler": "workspace:*",
    "flexsearch": "^0.8.212",
    "gray-matter": "^4.0.3",
    "katex": "^0.16.28",
    "motion": "^12.33.0",
    "next": "16.1.6",
    "next-intl": "^4.8.2",
    "react": "19.2.3",
    "react-dom": "19.2.3",
    "rehype-pretty-code": "^0.14.1",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4",
    "@types/mdx": "^2.0.13",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "chalk": "^5.6.2",
    "eslint": "^9",
    "eslint-config-next": "16.1.6",
    "fast-glob": "^3.3.3",
    "tailwindcss": "^4",
    "tsx": "^4.21.0",
    "typescript": "^5"
  }
}